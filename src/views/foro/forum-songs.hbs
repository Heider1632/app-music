<div class="row">
    <div class="col-md-12">
        <div class="alert alert-primary">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="/song/add/{{forum_id}}">Add Song</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
  {{#each songs}}
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ name }}
        </h4>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <p clsss="lead">There are not Songs yet.</p>
      <a href="/song/add/{{forum_id}}" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>