<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Cancion
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logo-song.png" width="300" alt="Logo">
      <div class="card-body">
        <form action="/song/new/{{forum_id}}" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="theme" placeholder="Nombre" autofocus>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="artist" placeholder="Artista" autofocus>
          </div>
          <div class="form-group">
            <label>Letra</label>
            <textarea class="form-control" name="letters" rows="20"></textarea>
          </div>
          <button class="btn btn-primary btn-block">
            Crear Cancion
          </button>
        </form>
      </div>
    </div>
  </div>
</div>